<Window
  x:Class="LinkerPlayer.Windows.EqualizerWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:converters="clr-namespace:LinkerPlayer.Converters"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:userControls="clr-namespace:LinkerPlayer.UserControls"
  xmlns:viewModels="clr-namespace:LinkerPlayer.ViewModels"
  Title="Equalizer"
  Width="500"
  Height="430"
  AllowsTransparency="True"
  BorderBrush="{DynamicResource MainWindowBorderBrush}"
  BorderThickness="1"
  FontFamily="Segoe UI"
  FontStyle="Normal"
  FontWeight="Normal"
  Loaded="Window_Loaded"
  WindowStyle="None"
  mc:Ignorable="d">

  <Window.DataContext>
    <viewModels:EqualizerViewModel x:Name="ViewModel" />
  </Window.DataContext>

  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LinkerPlayer;component/Styles/CircularButton.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LinkerPlayer;component/Styles/RectangleButton.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LinkerPlayer;component/Styles/EqVerticalSlider.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LinkerPlayer;component/Styles/StylesRepository.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LinkerPlayer;component/Styles/CustomCombobox.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <converters:EqFloatToStringConverter x:Key="EqFloatToStringConverter" />
    </ResourceDictionary>

  </Window.Resources>

  <WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="25" />
  </WindowChrome.WindowChrome>

  <Grid>
    <Grid.Resources>

      <Style x:Key="TextBlockFontStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Foreground" Value="{DynamicResource DefaultTextBrush}" />
      </Style>

      <Style TargetType="materialDesign:PackIcon">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
      </Style>

    </Grid.Resources>

    <Grid.Background>
      <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{DynamicResource MainWindowGradientStartColor}" />
        <GradientStop Offset=".5" Color="{DynamicResource MainWindowGradientStartColor}" />
        <GradientStop Offset="1" Color="{DynamicResource MainWindowGradientEndColor}" />
      </LinearGradientBrush>
    </Grid.Background>

    <Grid.RowDefinitions>
      <RowDefinition Height="38" />
      <RowDefinition Height="50" />
      <RowDefinition Height="30" />
      <RowDefinition />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <TextBlock
        Margin="12,2,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        d:Foreground=" White"
        FontSize="{DynamicResource FontSizeTitle}"
        FontWeight="Light"
        Foreground="{DynamicResource TitleBarForegroundBrush}"
        Text="Equalizer" />

      <StackPanel
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Background="{DynamicResource TitleBarBackgroundBrush}"
        Orientation="Horizontal"
        WindowChrome.IsHitTestVisibleInChrome="True">

        <Button
          Name="CloseBox"
          Click="CloseButton_Click"
          Content="{iconPacks:Material Close,
                                       Width=14,
                                       Height=14}"
          Style="{DynamicResource CloseButton}" />
      </StackPanel>
    </Grid>

    <Grid Grid.Row="1" HorizontalAlignment="Left">
      <userControls:ToggleSwitch
        x:Name="EqSwitch"
        Grid.Column="0"
        Margin="25,0,0,0"
        IsOn="true" />
    </Grid>
    <!--  {Binding IsOn}" />  -->

    <Grid Grid.Row="2" Margin="25,0,20,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <ComboBox
        Name="Presets"
        Grid.Column="0"
        Width="160"
        Height="28"
        Margin="0,0,0,0"
        HorizontalAlignment="Left"
        materialDesign:HintAssist.Hint="Default"
        Background="Transparent"
        BorderBrush="{DynamicResource ControlBorderBrush}"
        FontFamily="Segoe UI"
        FontSize="{DynamicResource FontSizeNormal}"
        FontStyle="Normal"
        FontWeight="Normal"
        Foreground="Black"
        IsTextSearchEnabled="false"
        SelectionChanged="Presets_SelectionChanged"
        SelectedItem="{Binding SelectedPreset}"
        Style="{StaticResource CustomComboBoxStyle}"
        ToolTip="Profiles" />

      <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Popup
          x:Name="NewPopup"
          Width="150"
          HorizontalOffset="0"
          Placement="Bottom"
          PlacementTarget="{Binding ElementName=NewButton}"
          StaysOpen="false"
          VerticalOffset="1">
          <Border Padding="5" Background="{DynamicResource MainWindowGradientStartBrush}">
            <TextBox
              Name="NewPopupTextBox"
              Foreground="#BDBDBD"
              KeyDown="NewPopupTextBox_KeyDown" />
          </Border>
        </Popup>

        <Button
          Name="NewButton"
          Grid.Column="0"
          Height="25"
          Margin="8,0,5,0"
          d:Foreground="White"
          Click="NewButton_Click"
          Content="New"
          FontSize="{DynamicResource FontSizeButton}"
          FontWeight="Normal"
          Foreground="{DynamicResource ControlForegroundBrush}"
          Style="{StaticResource LinkerRectangleButton}"
          ToolTip="Create new preset" />

        <Button
          Name="SaveButton"
          Grid.Column="1"
          Height="25"
          Margin="5,0,5,0"
          d:Foreground="White"
          Click="SaveButton_Click"
          Content="Save"
          FontSize="{DynamicResource FontSizeButton}"
          FontWeight="Normal"
          Foreground="{DynamicResource ControlForegroundBrush}"
          Style="{StaticResource LinkerRectangleButton}"
          ToolTip="Save preset" />

        <Button
          Name="DeleteButton"
          Grid.Column="2"
          Height="25"
          Margin="5,0,5,0"
          d:Foreground="White"
          Click="DeleteButton_Click"
          Content="Delete"
          FontSize="{DynamicResource FontSizeButton}"
          FontWeight="Normal"
          Foreground="{DynamicResource ControlForegroundBrush}"
          Style="{StaticResource LinkerRectangleButton}"
          ToolTip="Delete profile" />

        <Button
          Name="ResetButton"
          Grid.Column="3"
          Height="25"
          Margin="5,0,0,0"
          d:Foreground="White"
          Click="ResetButton_Click"
          Content="Reset"
          FontSize="{DynamicResource FontSizeButton}"
          FontWeight="Normal"
          Foreground="{DynamicResource ControlForegroundBrush}"
          Style="{StaticResource LinkerRectangleButton}"
          ToolTip="Reset bands to zero" />
      </Grid>
    </Grid>

    <Grid Grid.Row="3" Margin="20,0,0,0">
      <Grid.Resources>
        <Style BasedOn="{StaticResource TextBlockFontStyle}" TargetType="TextBlock">
          <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
      </Grid.Resources>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="54" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="38" />
      </Grid.ColumnDefinitions>

      <Border BorderBrush="Transparent" BorderThickness="1">

        <Grid Margin="0,12,0,8">
          <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" MinHeight="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
          </Grid.RowDefinitions>

          <TextBlock
            Grid.Row="0"
            VerticalAlignment="Top"
            d:Foreground="white"
            Foreground="{DynamicResource ControlForegroundBrush}"
            Text="12 dB" />
          <TextBlock
            Grid.Row="1"
            VerticalAlignment="Center"
            d:Foreground="white"
            Foreground="{DynamicResource ControlForegroundBrush}"
            Text="0 dB" />
          <TextBlock
            Grid.Row="2"
            VerticalAlignment="Bottom"
            d:Foreground="white"
            Foreground="{DynamicResource ControlForegroundBrush}"
            Text="-12 dB" />

        </Grid>
      </Border>

      <!--  EQ Sliders - Initialized in Window_Loaded  -->
      <Grid
        Name="EqGrid"
        Grid.Column="1"
        Margin="0,16,0,0"
        HorizontalAlignment="Stretch">

        <StackPanel
          Margin="0,0,0,0"
          HorizontalAlignment="Stretch"
          Orientation="Horizontal">
          <Border BorderBrush="Transparent" BorderThickness="1">

            <StackPanel Width="38" Margin="0,0,0,0">
              <Slider
                x:Name="Slider0"
                Height="200"
                HorizontalAlignment="Center"
                Maximum="12"
                Minimum="-12"
                Orientation="Vertical"
                Style="{StaticResource EqVerticalSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band0, Mode=TwoWay}" />
              <TextBlock
                Margin="0,5,0,3"
                HorizontalAlignment="Center"
                d:Foreground="White"
                Foreground="{DynamicResource ControlForegroundBrush}"
                Text="32" />
              <TextBlock
                Name="Band0Label"
                HorizontalAlignment="Center"
                d:Foreground="White"
                d:Text="0.0"
                Foreground="{DynamicResource ControlForegroundBrush}"
                Text="{Binding Band0, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
            </StackPanel>
          </Border>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider1"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band1, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="64" />
            <TextBlock
              Name="Band1Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band1, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider2"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band2, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="125" />
            <TextBlock
              Name="Band2Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band2, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider3"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band3, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="250" />
            <TextBlock
              Name="Band3Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band3, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="48" Margin="0,0,0,0">
            <Slider
              x:Name="Slider4"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band4, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="500" />
            <TextBlock
              Name="Band4Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band4, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider5"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band5, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="1K" />
            <TextBlock
              Name="Band5Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band5, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider6"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band6, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="2K" />
            <TextBlock
              Name="Band6Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band6, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider7"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band7, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="4K" />
            <TextBlock
              Name="Band7Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band7, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider8"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band8, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="8K" />
            <TextBlock
              Name="Band8Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band8, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
          <StackPanel Width="38" Margin="0,0,0,0">
            <Slider
              x:Name="Slider9"
              Height="200"
              HorizontalAlignment="Center"
              Maximum="12"
              Minimum="-12"
              Orientation="Vertical"
              Style="{StaticResource EqVerticalSlider}"
              TickFrequency="1"
              TickPlacement="BottomRight"
              Value="{Binding Band9, Mode=TwoWay}" />
            <TextBlock
              Margin="0,5,0,3"
              HorizontalAlignment="Center"
              d:Foreground="White"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="16K" />
            <TextBlock
              Name="Band9Label"
              HorizontalAlignment="Center"
              d:Foreground="White"
              d:Text="0.0"
              Foreground="{DynamicResource ControlForegroundBrush}"
              Text="{Binding Band9, Mode=TwoWay, Converter={StaticResource EqFloatToStringConverter}}" />
          </StackPanel>
        </StackPanel>
      </Grid>
    </Grid>

    <Grid
      Grid.Row="4"
      Height="44"
      VerticalAlignment="Bottom"
      Background="{DynamicResource MainWindowGradientStartBrush}">

      <Button
        Name="CloseButton"
        Height="25"
        MinWidth="80"
        Margin="0,0,20,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        d:Foreground="White"
        Click="CloseButton_Click"
        Content="Close"
        FontSize="{DynamicResource FontSizeButton}"
        FontWeight="Normal"
        Foreground="{DynamicResource ControlForegroundBrush}"
        Style="{StaticResource LinkerRectangleButton}" />

    </Grid>
  </Grid>

</Window>
