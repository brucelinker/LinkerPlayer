<UserControl
  x:Class="LinkerPlayer.UserControls.TrackInfo"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:audio="clr-namespace:LinkerPlayer.Audio"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="250"
  FontFamily="Segoe UI"
  FontWeight="Light"
  mc:Ignorable="d">

  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <!--  AlbumCover  -->
    <Grid
      x:Name="CoverGrid"
      Grid.Row="0"
      Grid.Column="0"
      Margin="0,1,0,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      d:DesignHeight="250">
      <Grid
        x:Name="ImageGrid"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased">

        <Image
          x:Name="TrackImage"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Source="{Binding DefaultAlbumImage}">
          <Image.Style>
            <Style TargetType="Image">
              <Setter Property="Opacity" Value="1" />
            </Style>
          </Image.Style>
        </Image>
        <TextBlock
          x:Name="TrackImageText"
          Height="auto"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          FontSize="20"
          Text="[ No Selection ]" />

      </Grid>
    </Grid>

    <Grid
      Grid.Row="1"
      Margin="0,0,0,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center">

      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <Border Grid.Row="0" Grid.RowSpan="5" />

      <TextBlock
        Name="TrackName"
        Grid.Row="0"
        Grid.ColumnSpan="2"
        Margin="0,8,0,2"
        Padding="8,0,0,0"
        VerticalAlignment="Center"
        d:Text="Title"
        FontSize="{DynamicResource FontSizeBiggest}"
        FontWeight="Regular"
        Foreground="{DynamicResource DefaultTextBrush}"
        TextTrimming="CharacterEllipsis" />

      <TextBlock
        Name="TrackArtist"
        Grid.Row="1"
        Margin="0,0,0,0"
        Padding="8,0,0,0"
        VerticalAlignment="Center"
        d:Text="Artist"
        FontSize="{DynamicResource FontSizeNormal}"
        FontWeight="Normal"
        Foreground="{DynamicResource DefaultTextBrush}"
        TextTrimming="CharacterEllipsis" />

      <TextBlock
        Name="TrackAlbum"
        Grid.Row="2"
        Grid.ColumnSpan="2"
        Margin="0,0,0,0"
        Padding="8,0,0,0"
        VerticalAlignment="Center"
        d:Text="Album"
        FontSize="{DynamicResource FontSizeNormal}"
        FontWeight="Normal"
        Foreground="{DynamicResource DefaultTextBrush}"
        TextTrimming="CharacterEllipsis" />

      <StackPanel Grid.Row="3" Orientation="Horizontal">
        <TextBlock
          Name="TrackYear"
          Margin="0,0,10,0"
          Padding="8,0,0,0"
          VerticalAlignment="Center"
          d:Text="Year"
          FontSize="{DynamicResource FontSizeNormal}"
          FontWeight="Normal"
          Foreground="{DynamicResource DefaultTextBrush}"
          TextTrimming="CharacterEllipsis" />

        <TextBlock
          Name="TrackBitrate"
          Margin="0,0,0,0"
          Padding="8,0,0,0"
          VerticalAlignment="Center"
          d:Text="Year"
          FontSize="{DynamicResource FontSizeNormal}"
          FontWeight="Normal"
          Foreground="{DynamicResource DefaultTextBrush}"
          TextTrimming="CharacterEllipsis" />
      </StackPanel>

      <TextBlock
        Name="TrackGenre"
        Grid.Row="4"
        Margin="0,0,0,0"
        Padding="8,0,0,0"
        VerticalAlignment="Center"
        d:Text="Genre"
        FontSize="{DynamicResource FontSizeNormal}"
        FontWeight="Normal"
        Foreground="{DynamicResource DefaultTextBrush}"
        TextTrimming="CharacterEllipsis" />

    </Grid>
    <Grid
      Grid.Row="2"
      Margin="8,0,8,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">

      <audio:SpectrumAnalyzer
        x:Name="Spectrum"
        AveragePeaks="False"
        BarHeightScaling="Decibel"
        MaximumFrequency="20000"
        MinimumFrequency="20"
        PeakFallDelay="10"
        Style="{StaticResource SpectrumAnalyzerStyle}" />
    </Grid>
  </Grid>

</UserControl>
